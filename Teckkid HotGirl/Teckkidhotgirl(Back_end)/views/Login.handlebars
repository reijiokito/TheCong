<div class="modal-dialog text-center">
    <div class="col-sm-8 main-section">
        <di class="modal-content">
            <div class="col-12 user-img">
                <img src="1.png" alt="userImage">
            </div>
            <form class="col-12">
                <div class="form-group">
                    <i class="fas fa-user" id="icon1"></i>
                    <input type="text" id="username" class="form-control" placeholder="Enter Username">
                </div>
                <div class="form-group">
                    <i class="fas fa-lock" id="icon2"></i>
                    <input type="password" id="password" class="form-control" placeholder="Enter Password">
                </div>
                <button type="submit" class="btn btn-success" id="userLogin">
                    <i class="fas fa-sign-in-alt"></i> Login </button>
                
                    
            </form>
            <div class="col-12 forgot">
                <a href="http://localhost:8989/signup"><button class="btn btn-primary">Sign up</button></a>
            </div>
            <div class="col-12 forgot">
                <a href="#">Forgot password? </a>
            </div>
    </div>
</div>
<script>
    $("#userLogin").on("click", function (event) {
        event.preventDefault();
        $.ajax({
            url: '/api/login',
            type: 'POST',
            data: {
                username: $("#username").val(),
                password: $("#password").val()
            },
            success: function (body) {
                if(body.success){
                    window.location.href = "http://localhost:8989/api/users";
                }
            },
            error: function (body) {
                console.log(body);
                alert("Loi roi: 2");
            }
        });
    });

</script>